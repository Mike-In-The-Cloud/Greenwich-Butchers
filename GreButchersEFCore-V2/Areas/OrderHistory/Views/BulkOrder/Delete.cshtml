@model GreButchersEFCore_V2.Models.ViewModels.BulkOrderViewModel
@{
    ViewData["Title"] = "Delete";
}
<br />
<div class="border backgroundWhite">
    <h2 class="text-info">Delete Bulk Order</h2>
    <form method="post" asp-action="Delete">
        <div class="p-4 border rounded">
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="BulkOrder.BulkOrderId"></label>
                </div>
                <div class="col-5">
                    <input asp-for="BulkOrder.BulkOrderId" disabled class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2 text-danger font-weight-bold text-right">
                    Warning
                </div>
                <div class="col-5 text-danger">
                    If deleted this bulk order cannot be recovered.
                </div>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" class="btn btn-danger" asp-route-id="@Model.BulkOrder.BulkOrderId" value="Delete" />
                <a asp-action="Index" class="btn btn-success">Back to List</a>
            </div>
        </div>
    </form>
</div>
