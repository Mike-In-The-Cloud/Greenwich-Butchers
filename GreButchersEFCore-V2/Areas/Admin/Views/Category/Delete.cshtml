@model GreButchersEFCore_V2.Models.Category
@{
    ViewData["Title"] = "Delete";
}
<br />
<div class="border backgroundWhite">
    <h2 class="text-info">Delete Category</h2>
    <form method="post" asp-action="Delete">
        <div class="p-4 border rounded">
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="CategoryName"></label>
                </div>
                <div class="col-5">
                    <input asp-for="CategoryName" disabled class="form-control" />
                </div>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" class="btn btn-danger" asp-route-id="@Model.CategoryId" value="Delete" />
                <a asp-action="Index" class="btn btn-success">Back to List</a>
            </div>
        </div>
    </form>
</div>
