@model GreButchersEFCore_V2.Models.Category
@{
    ViewData["Title"] = "Details";
}
<br />
<div class="border backgroundWhite">
    <h2 class="text-info">Category Details</h2>
    <div class="p-4 border rounded">
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CategoryName"></label>
            </div>
            <div class="col-5">
                <input asp-for="CategoryName" disabled class="form-control" />
            </div>
        </div>
        <br />
        <div class="form-group">
            <a asp-action="Edit" asp-route-id="@Model.CategoryId" class="btn btn-primary">Edit</a>
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</div>
