@model IEnumerable<GreButchersEFCore_V2.Models.Supplier>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Supplier List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" class="btn btn-info"><i class="fas fa-folder-plus"></i> New Supplier</a>
        </div>
    </div>

    <br />
    <div>
        <table class="table table-striped border">
            <tr class="table-info">
                <th>
                    @Html.DisplayNameFor(s => s.SupplierCompany)
                </th>
                <th>
                    @Html.DisplayNameFor(s => s.SupplierName)
                </th>
                <th>
                    @Html.DisplayNameFor(s => s.SupplierNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(s => s.SupplierEmail)
                </th>
                <th></th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.SupplierCompany)
                </td>
                <td>
                    @Html.DisplayFor(m => item.SupplierName)
                </td>
                <td>
                    @Html.DisplayFor(m => item.SupplierNumber)
                </td>
                <td>
                    @Html.DisplayFor(m => item.SupplierEmail)
                </td>
                <td>
                    <partial name="_TableButtonPartial2" model="item.SupplierId" />
                </td>
            </tr>
            }
        </table>
    </div>
</div>