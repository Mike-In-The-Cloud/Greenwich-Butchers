@model GreButchersEFCore_V2.Models.Supplier
@{
    ViewData["Title"] = "Create";
}
<br />
<div class="border backgroundWhite">
    <h2 class="text-info">Add New Supplier</h2>
    <form method="post" asp-action="Create">
        <div class="p-4 border rounded">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="SupplierCompany"></label>
                </div>
                <div class="col-5">
                    <input asp-for="SupplierCompany" class="form-control" />
                </div>
                <span asp-validation-for="SupplierCompany" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="SupplierName"></label>
                </div>
                <div class="col-5">
                    <input asp-for="SupplierName" class="form-control" />
                </div>
                <span asp-validation-for="SupplierName" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="SupplierEmail"></label>
                </div>
                <div class="col-5">
                    <input asp-for="SupplierEmail" class="form-control" />
                </div>
                <span asp-validation-for="SupplierEmail" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="SupplierNumber"></label>
                </div>
                <div class="col-5">
                    <input asp-for="SupplierNumber" class="form-control" />
                </div>
                <span asp-validation-for="SupplierNumber" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Create" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>

    </form>
</div>
@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
